/* pages/order/components/order-card/index.wxss */

.order-card {
  display: flex;
  flex-flow: column nowrap;
  margin: 24rpx 0;
  padding: 24rpx 32rpx 24rpx;
  background-color: white;
  border-radius: 8rpx;
}
.order-card .order-status {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 24rpx;
}
.order-card .total-price-info {
  text-align: right;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #999999;
  padding-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
}
.total-price-info.bold-price {
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
}
.total-price-info .real-pay {
  font-size: 36rpx;
  line-height: 48rpx;
  color: #fa4126;
  font-weight: bold;
}
.order-card .operate-btns {
  display: flex;
  justify-content: flex-end;
  line-height: 1;
  margin-top: 20rpx;
}
.operate-btns .btn {
  width: 160rpx;
  font-weight: 400;
  margin-left: 24rpx;
  margin-right: 0rpx;
}

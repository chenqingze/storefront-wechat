/* pages/catalog/details/index.wxss */
page {
  width: 100vw;
}
.go-back-btn {
  position: fixed;
  z-index: 999;
  top: 64rpx;
  left: 13rpx;
  background-color: #0000006b;
  opacity: 90%;
  border-radius: 50%;
}
.product-details-container {
  background-color: #f2f2f2;
}
.product-details-container .product-info {
  margin: 0 auto;
  padding: 26rpx 0 28rpx 30rpx;
  background-color: #fff;
}
.product-details-container .swipe-img {
  width: 100%;
  height: 750rpx;
}
.product-details-container .product-info .product-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.product-details-container .product-info .product-title .product-name {
  width: 600rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 35rpx;
  word-break: break-all;
  color: #333333;
}
.product-details-container .product-info .product-title .product-share {
  margin-right: 15rpx;
}
.product-details-container .product-info .product-price {
  margin-top: 20rpx;
}
.product-details-container .product-info .product-price .sale-price {
  color: rgb(199, 25, 25);
}
.product-details-container .product-info .product-price .retail-price {
  color: #bbbbbb;
  font-size: x-small;
  text-decoration: line-through;
  margin-left: 23rpx;
}
.variants-select {
  height: 80rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 28rpx;
}
.variants-select .label {
  margin-right: 30rpx;
  text-align: center;
  flex-shrink: 0;
  color: #999999;
  font-weight: normal;
}
.variants-select .content {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}
/* .product-select .content .tintColor {
  color: #aaa;
} */
.product-details-container .description {
  margin-top: 20rpx;
  background-color: #fff;
  padding-top: 13rpx;
  padding-bottom: 120rpx;
}
.product-bottom-operation {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
  padding: 18rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}
.product-bottom-operation .bottom-btn-group {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-evenly;
  flex: 1;
}
.icon-btn {
  box-sizing: border-box;
  text-align: center;
  margin-bottom: 30rpx;
}
.icon-btn .icon-btn-text {
  font-size: 24rpx;
  color: #999;
}
.product-bottom-operation .add-cart-button {
  color: #ffffff;
  font-size: 32rpx;
  height: 80rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 64rpx;
  padding: 0 128rpx;
  margin: 0 32rpx 18rpx;
  background-color: #0052d9;
}

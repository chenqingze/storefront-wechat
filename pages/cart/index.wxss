/* pages/cart/index.wxss */
page {
  background-color: #f2f2f2;
}
.cart-container {
  width: 100%;
}
.cart-item-checkbox-icon {
  align-self: center;
}
.bottom-bar {
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  z-index: 2;
  background-color: #ffffff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.bottom-bar .total-info {
  display: flex;
  flex-flow: column nowrap;
  flex: 1;
  font-size: 24rpx;
  text-align: right;
}
.bottom-bar .total-info .total-price {
  color: red;
  font-size: 32rpx;
}
.bottom-bar .checkout-btn {
  border-radius: 48rpx;
  color: #ffffff;
  margin: 0 32rpx;
  font-size: 32rpx;
  height: 72rpx;
  text-align: center;
  line-height: 68rpx;
  padding: 0 32rpx;
  background-color: #0052d9;
}
